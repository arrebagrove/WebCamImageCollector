<Page
    x:Class="WebCamImageCollector.RemoteControl.UI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WebCamImageCollector.RemoteControl.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:WebCamImageCollector.RemoteControl.UI.Data"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <Style x:Key="FlatButtonStyle" TargetType="Button">
            <Setter Property="Template" Value="{StaticResource FlatButtonTemplate}" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="Background" Value="Transparent" />
        </Style>
    </Page.Resources>
    <Grid>
        <SplitView x:Name="rootSplitView" DisplayMode="Overlay" IsPaneOpen="{x:Bind btnMenu.IsChecked, Mode=TwoWay, Converter={StaticResource nullableBoolToBool}}">
            <SplitView.Pane>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Style="{StaticResource HeaderStyle}">
                        <TextBlock Text="WebCam Remote Control" Style="{StaticResource HeaderTextStyle}" FontWeight="Bold" />
                    </StackPanel>
                    <StackPanel Margin="0,10,0,0">
                        <Button x:Name="btnRemoteClient" Content="Remote control" Click="btnRemoteClient_Click" Style="{StaticResource FlatButtonStyle}" />
                        <Button x:Name="btnLocalServer" Content="Local server" Click="btnLocalServer_Click" Style="{StaticResource FlatButtonStyle}" />
                    </StackPanel>
                </StackPanel>
            </SplitView.Pane>
            <Frame x:Name="frmRoot" />
        </SplitView>
        <ToggleButton x:Name="btnMenu" Style="{StaticResource MenuButtonStyle}" />
    </Grid>
</Page>
