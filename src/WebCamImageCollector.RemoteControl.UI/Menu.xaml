<UserControl
    x:Class="WebCamImageCollector.RemoteControl.UI.Menu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WebCamImageCollector.RemoteControl.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <SplitView x:Name="rootSplitView" DisplayMode="Overlay" IsPaneOpen="{x:Bind btnMenu.IsChecked, Mode=TwoWay, Converter={StaticResource nullableBoolToBool}}">
            <SplitView.Pane>
                <StackPanel Margin="0,50,0,0">
                    <StackPanel Margin="12">
                        <Button x:Name="btnHome" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Content="Home" Click="btnHome_Click" />
                        <Button x:Name="btnSettings" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Content="Settings" Click="btnSettings_Click" />
                    </StackPanel>
                </StackPanel>
            </SplitView.Pane>
        </SplitView>
        <ToggleButton x:Name="btnMenu" Style="{StaticResource SplitViewTogglePaneButtonStyle}" />
    </Grid>
</UserControl>
